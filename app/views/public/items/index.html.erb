<div class="container">
  <div class="row">
    <%= render 'public/users/sidebar', user: @user %>
    <div class="col-md-9">
      <h1>アイテム一覧</h1>
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image %>
        <% end %>
        <%= item.name %>
        <%= item.maker.name %>
        <%= item.genre.name %>
        <%= item.tags.map(&:name).join(', ') %>
      <% end %>
    </div>
  </div>
</div>
