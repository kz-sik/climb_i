<h1>ジャンル追加・一覧</h1>

<%= form_with model: @genre, url: genres_path, method: :post do |f| %>
  <%= f.label :name, 'ジャンル名' %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td>
        <%= link_to "編集する", edit_genre_path(genre.id), class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>