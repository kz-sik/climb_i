<div class="container">
  <div class="row">
    <%= render 'public/users/sidebar', user: current_user %>
    <div class="col-9">
      <% if flash[:notice] %>
        <div class="p-2 alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div class="h3 ml-3 my-3">ジャンル追加</div>
      <div class="ml-3">
        <% if @genre.errors.any? %>
          <%= @genre.errors.count %>件のエラーが発生しました
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
        <%= form_with model: @genre, url: genres_path, method: :post do |f| %>
          <div class="form_group ml-3">
            <strong><%= f.label :name, 'ジャンル名' %></strong>
            <%= f.text_field :name, placeholder: "ジャンル名" %>
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </div>
        <% end %>
      <div class="h3 ml-3 my-3">ジャンル一覧</div>
      <table class="table ml-3">
        <thead>
          <tr>
            <th>ジャンル名</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to "編集する", edit_genre_path(genre.id), class: "btn btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
