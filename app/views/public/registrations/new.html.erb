<div class="container">
  <div class="row" style="background-image: url(<%= asset_path('sidebar.jpg') %>); background-size: contain;">
    <div class="p-3 mx-auto" style="width: 400px;">
      <div class="h3 text-center "><u>新規登録</u></div>
      <%= form_with model: resource, url: registration_path(resource) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <strong><%= f.label :name, "ニックネーム" %></strong><br />
          <%= f.text_field :name %>
        </div>

        <div class="form-row">
          <div class="form-group col-md-3">
            <strong><%= f.label :sex, "性別" %></strong><br />
            <%= f.select :sex,[['男性', '男性'], ['女性', '女性']], { include_blank: true} %>
          </div>
          <div class="form-group col-md-9">
            <strong><%= f.label :height, "身長" %></strong><br />
            <%= f.number_field :height %>cm
          </div>
        </div>

        <div class="form-group">
          <strong><%= f.label :email, "メールアドレス" %></strong><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "climb_i@xxx.com" %>
        </div>

        <div class="form-group">
          <strong><%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %></strong><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数" %>
        </div>

        <div class="form-group">
          <strong><%= f.label :password_confirmation, "パスワード（確認用）" %></strong><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success w-100" %>
        </div>
      <% end %>
      <div class="my-3">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>

