<div class="container">
  <div class="row">
    <%= render 'public/users/sidebar', user: @user %>
    <div class="col-md-9">
      <table>
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
            <th>性別</th>
            <th>身長</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= user.sex %></td>
              <td><%= user.height %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>