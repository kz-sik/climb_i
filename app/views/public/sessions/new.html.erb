<div class="container">
  <div class="row" style="background-image: url(<%= asset_path('sidebar.jpg') %>); background-size: contain;">
    <div class="p-3 mx-auto" style="width: 400px;">
      <div class="h3 text-center "><u>ログイン</u></div>
      <%= form_with model: resource, url: session_path(resource) do |f| %>
        <div class="form-group">
          <strong><%= f.label :email, "メールアドレス" %></strong><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "climb_i@xxx.com" %>
        </div>

        <div class="form-group">
          <strong><%= f.label :password, "パスワード" %></strong><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数" %>
        </div>

        <div class="form-group">
          <strong><%= f.label :password_confirmation, "パスワード（確認用）" %></strong><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-success w-100" %>
        </div>
      <% end %>
      <div class="my-3">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
