<div class="container">
  <div class="row">
    <div class="p-3 mx-auto" style="width: 400px;">
      <div class="h3 ml-3 my-3"><%= @user.name %>さんの会員情報編集</div>
        <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
          <div>会員ID:<%= @user.id %></div>
          <div class="form-group">
            <strong><%= f.label :name, "ニックネーム" %></strong><br />
            <%= f.text_field :name %>
          </div>
          <div class="form-row">
            <div class="form-group col-md-3">
              <strong><%= f.label :sex, "性別" %></strong><br />
              <%= f.select :sex,[['男性', '男性'], ['女性', '女性']], { include_blank: true} %>
            </div>
            <div class="form-group col-md-9">
              <strong><%= f.label :height, "身長" %></strong><br />
              <%= f.number_field :height %>cm
            </div>
          </div>
          <div class="form-group">
            <strong><%= f.label :email, "メールアドレス" %></strong><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "climb_i@xxx.com" %>
          </div>
          <div class="form-group">
            <strong><%= f.label :is_deleted, '会員ステータス' %></strong><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数" %>
          </div>
          <div class="form-group">
            <strong><%= f.label :password_confirmation, "パスワード（確認用）" %></strong><br />
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "無効" %>
          </div>
          <div class="actions">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
  </div>
</div>