<div class="container">
  <div class="row">
    <div class="col-12 h3 my-3">アイテム一覧</div>
      <table class="table table-striped table-bordered text-center">
        <thead>
          <tr>
            <th>画像</th>
            <th>アイテム名</th>
            <th>ジャンル</th>
            <th>メーカー</th>
            <th>タグ</th>
            <th>レビュー数</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="align-middle p-2">
                <%= link_to admin_item_path(item.id) do %>
                  <%= image_tag item.get_item_image(100,100) %>
                <% end %>
              </td>
              <td class="align-middle p-2"><%= item.name %></td>
              <td class="align-middle p-2"><%= item.genre.name %></td>
              <td class="align-middle p-2"><%= item.maker.name %></td>
              <td class="align-middle p-2"><%= item.tags.map(&:name).join(', ') %></td>
              <td class="align-middle p-2"><%= item.reviews.count %></td>
              <td class="align-middle p-2">
                <%= link_to "編集", edit_admin_item_path(item.id), class: "btn btn-success" %>
              </td>
              <td class="align-middle p-2">
                <%= link_to "削除", admin_item_path(item.id), method: :delete, data: {confirm: '削除してもいいですか？'}, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
