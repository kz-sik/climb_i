<div class="container">
  <div class="row">
    <div class="col-12 h3 my-3">ユーザー一覧</div>
    <table class="table table-striped table-bordered text-center">
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>プロフィール画像</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td class="align-middle p-2"><%= user.id %></td>
          <td class="align-middle p-2"><%= image_tag user.get_profile_image(100, 100) %></td>
          <td class="align-middle p-2"><%= link_to user.name, admin_user_path(user.id) %></td>
          <td class="align-middle p-2"><%= user.email %></td>
          <td class="align-middle p-2">
            <% if user.is_deleted %>
              <div>退会</div>
            <% else %>
              <div>有効</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>