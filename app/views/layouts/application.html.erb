<!DOCTYPE html>
<html>
  <head>
    <title>ClimbI</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <% if admin_signed_in? %>
            <a class="navbar-brand p-3" href="/admin"><%= image_tag ('logo.png'), :size =>'280x120' %></a>
          <% else %>
            <a class="navbar-brand p-3" href="/"><%= image_tag ('logo.png'), :size =>'280x120' %></a>
          <% end %>
          <div class="form-inline my-2 my-lg-0">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to 'ユーザー一覧', users_path, class: 'nav-link text-dark' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to 'メーカー名一覧', makers_path, class: 'nav-link text-dark' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to 'ジャンル一覧', genres_path, class: 'nav-link text-dark' %>
                  </li>
                  <li class="nav-item search_form">
                    <%= render '/public/searches/search' %>
                  </li>
                <% elsif admin_signed_in? %>
                  <li class="nav-item">
                    <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to 'ユーザー一覧', admin_path, class: 'nav-link text-dark' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>

        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="bg-secondary text-white py-2">
      <div class="text-center mx-auto" style="width: auto;">Logo created by <a href="https://www.designevo.com/" title="Free Online Logo Maker">DesignEvo logo maker</a></div>
    </footer>
  </body>
</html>
